{
  "name": "functions",
  "version": "1.0.0",
  "main": "lib/index.js",
  "license": "MIT",
  "engines": {
    "node": "16"
  },
  "scripts": {
    "build": "tsc",
    "start:handleSlack": "NODE_ENV=development functions-framework --source=lib/ --target=handleSlack",
    "start:paddle": "NODE_ENV=development functions-framework --source=lib/ --target=paddle",
    "dev:handleSlack": "NODE_ENV=development concurrently \"tsc -w\" \"nodemon --watch ./lib/ --exec yarn start:handleSlack\"",
    "dev:paddle": "NODE_ENV=development concurrently \"tsc -w\" \"nodemon --watch ./lib/ --exec yarn start:paddle\"",
    "typecheck": "tsc --noEmit",
    "lint": "gts lint",
    "clean": "gts clean",
    "compile": "tsc",
    "fix": "gts fix",
    "prepare": "yarn run compile",
    "pretest": "yarn run compile",
    "posttest": "yarn run lint"
  },
  "dependencies": {
    "@google-cloud/functions-framework": "^3.1.2",
    "@notionhq/client": "^2.2.0",
    "@slack/bolt": "^3.11.3",
    "dotenv": "^16.0.1"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "concurrently": "^7.2.2",
    "gts": "^3.1.0",
    "nodemon": "^2.0.18",
    "typescript": "^4.7.4"
  }
}
